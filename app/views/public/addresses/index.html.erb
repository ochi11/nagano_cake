<div class="index-container" style="width:60%; margin: 20px auto;">

  <!-- 配送先登録フォーム -->
      <h5>配送先登録/一覧</h5>
      <%= form_with model: @address, url:public_addresses_path do |f| %>
        <table class="table table-bordered">
	      <tr>
		    <th>郵便番号(ハイフンなし)</th>
		    <td><%= f.text_field :postal_code %></td>
	      </tr>
	      <tr>
		    <th>住所</th>
		    <td><%= f.text_field :address, style: "width: 80%;" %></td>
	      </tr>
	      <tr>
		    <th>宛名</th>
		    <td><%= f.text_field :name %></td>
	      </tr>
	    </table>
	      <%= f.submit "新規登録", class:"btn btn-primary btn-md" %>
      <% end %>

  <!-- 配送先一覧/編集/削除/ -->
  <table class="table table-bordered" style="margin-top: 20px;">
  	<thead>
	  <tr>
  	  <th>郵便番号</th>
  		<th>住所</th>
  		<th>宛名</th>
	  </tr>
    </thead>
	<% @addresses.each do |address| %>
	  <tbody>
	    <tr>
		  <td>
			<%= address.postal_code %>
		  </td>
		  <td>
			<%= address.address %>
		  </td>
		  <td>
			<%= address.name %>
		  </td>
		  <td>
			<%= link_to "編集する", edit_public_address_path(address), class:"btn btn-primary btn-md" %>
			<%= link_to "削除する", public_address_path(address), class:"btn btn-danger btn-md", method: :delete %>
		  </td>
	    </tr>
	  </tbody>
	<% end %>
  </table>

</div>