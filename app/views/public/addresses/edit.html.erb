<div class="edit-container" style="width:50%; margin: 20px auto;">

  <!-- 編集フォーム見出し -->
  <h3>配送先編集</h3>

  <!-- 編集フォーム -->
  <%= form_with model: @address, url:public_address_path do |f| %>
    <table class="table table-bordered">
      <tr>
	    <td>郵便番号(ハイフンなし)</td>
	    <td><%= f.text_field :postal_code, autofocus: true %></td>
	  </tr>
	  <tr>
	    <td>住所</td>
	    <td><%= f.text_field :address, autofocus: true, style: "width: 80%;" %></td>
	  </tr>
	  <tr>
	    <td>宛名</td>
	    <td><%= f.text_field :name, autofocus: true %></td>
	  </tr>
    </table>

    <!-- 編集確定ボタン -->
    <%= f.submit "変更内容を保存", class:"btn btn-primary btn-md" %>
  <% end %>

</div>