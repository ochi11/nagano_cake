<div class="container" style="margin-top: 20px;">
 <h4>注文情報確認</h4>
<div class="row">
	<div class="col-xs-8">
		<table class="table table-bordered">
			<tr>
				<th>商品名</th>
				<th>単価</th>
				<th>数量</th>
				<th>小計</th>
			</tr>

<% @total_price = 0 %>
 <% @cart_items.each do |cart_item| %>
	<tr>
		<td>
	<% if cart_item.item.image.attached? %>
    <%= image_tag cart_item.item.image, size: "100x100" %>
  <% else %>
    <%= image_tag 'no_image', size: "100x100" %>
  <% end %>
			<%= cart_item.item.name %>
		</td>
		<td>

 			<%= cart_item.item.add_tax_price.to_s(:delimited) %>
		</td>
		<td>
      <%= cart_item.amount %>
		</td>
		<td>
			<%= cart_item.item.add_tax_price * cart_item.amount %>
			<% @total_price += cart_item.item.add_tax_price * cart_item.amount %>
		</td>
	</tr>

 <% end %>
		</table>
	</div>

	<div class="col-xs-4">
		<table class="table table-bordered">
			<tr>
				<th>送料</th>
				<td>800</td>
			</tr>

			<tr>
				<th>商品合計</th>
				<td><%= @total_price %></td>
			</tr>
			<tr>
				<th>請求金額</th>
				<td><%= @order.billing_amount = @total_price+800 %></td>
			</tr>
		</table>
	</div>
</div>

<h4>支払方法</h4>
	<p><%= @order.payment_method_i18n %></p>

<h4>お届け先</h4>
	<p>〒<%= @order.order_postal_code %>
	<%= @order.order_address %>
	<%= @order.order_name %> </p>

<hr>

<div class="text-center">
	<%= link_to '注文を確定する', complete_public_orders_path, class:"btn btn-success" %>
</div>
</div>