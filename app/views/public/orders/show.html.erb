<div class="row" style="width:60%; margin:0 auto;">
<h4 style="margin-bottom: 20px; border-left: 2px solid #2D6F4C; padding: 10px;">注文履歴詳細</h4>

<table class="table table-bordered ">
  	<h5>注文情報</h5>
		<tr>
			<th>注文日</th>
			<td><%= @order.created_at.strftime('%Y年%m月%d日') %></td>
		</tr>
		<tr>
			<th>配送先</th>
			<td>
				〒<%= @order.order_postal_code %><br>
				<%= @order.order_address %><br>
				<%= @order.order_name %>
			</td>
		</tr>
		<tr>
			<th>支払方法</th>
			<td><%= @order.payment_method_i18n %></td>
		</tr>
		<tr>
			<th>ステータス</th>
			<td><%= @order.status %></td>
		</tr>
</table>

<h5>請求情報</h5>
<table class="table table-bordered ">
	<tbody>
		<tr>
			<th>商品合計</th>
			<%# @total_price = 0 %>
			<td>
			  <% @total = 0 %>
			  <% @order.order_details.each do |order_detail| %>
			    <% @total = @total+(order_detail.item.add_tax_price * order_detail.amount) %>
			  <% end %>
			  <%= @total %>
			  <%#= @order_detail.add_tax_price * order_detail.amount %>
			<%# @total_price += order_detail.item.add_tax_price * order_detail.amount %>
			</td>
		</tr>
		<tr>
			<th>配送料</th>
			<td><%= @order.postage %></td>
		</tr>
		<tr>
			<th>ご請求額</th>
			<td><%= @order.billing_amount %></td>
		</tr>
	</tbody>
</table>

<h5>注文内容</h5>
<table class="table table-bordered">
		<tr>
			<th>商品</th>
			<th>単価（税込）</th>
			<th>個数</th>
			<th>小計</th>
		</tr>
			  <% @order.order_details.each do |order_detail| %>
			  <tr>
			    <td><%= order_detail.item.name %></td>
			    <td><%= order_detail.item.add_tax_price %></td>
			    <td><%= order_detail.amount %></td>
			    <td><%= order_detail.item.add_tax_price * order_detail.amount %></td>
			  </tr>
			  <% end %>

</table>
<hr>
</div>