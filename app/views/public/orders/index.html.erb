<div class="row" style="width: 90%; margin: 20px auto;">
<h4 style="margin-bottom: 20px; border-left: 2px solid #2D6F4C; padding: 10px;">注文履歴一覧</h4>
	<table  class="table table-bordered ">
		<thead>
			<tr style="background:#dad7d7;">
				<th>注文日</th>
				<th>配送先</th>
				<th>注文商品</th>
				<th>支払金額</th>
				<th>注文詳細</th>
			</tr>
	</thead>
	<tbody>
		<% @orders.each do |order| %>
		<tr>
			<td><%= order.created_at.strftime('%Y年%m月%d日') %></td>
			<td>
				〒<%= order.order_postal_code %><br>
				<%= order.order_address %><br>
				<%= order.order_name %>
			</td>
			<td>
			  <% @total_price = 0 %>
				<% order.order_details.each do |order_detail| %>
					<%= order_detail.item.name %><br>
				<% end %>
			</td>
			<td>
         <%= order.billing_amount %>円
			 </td>
			<td><%= link_to public_order_path(order), class: "btn btn-success" do %>表示する<% end %></td>
		</tr>
		<% end %>
	</tbody>
</table>
</div>