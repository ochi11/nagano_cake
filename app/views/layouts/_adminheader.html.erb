  <div id = "header">
      <%= link_to root_path do %>
      		<%= image_tag 'logo.png', size: '100x100' %>
      <% end %>


      <div id="box" style="margin: 0 auto 20px; text-align: center;">
      <!-- ログイン時表示される内容-->
      <% if admin_signed_in? %>
      		<%= link_to '商品一覧', admin_items_path, class:"btn btn-primary text-dark bg-light" %>
          <%= link_to '会員一覧', admin_customers_path, class:"btn btn-primary text-dark bg-light" %>
      		<%= link_to '注文履歴一覧', admin_path, class:"btn btn-primary text-dark bg-light" %>
      		<%= link_to 'ジャンル一覧', admin_genres_path, class:"btn btn-primary text-dark bg-light" %>
      		<%= link_to 'ログアウト', destroy_admin_session_path, method: :delete, class:"btn btn-primary text-dark bg-light" %>

      	<% else %>
      <!-- ログアウト時に表示される内容 -->
      		<%= link_to 'About', about_path, class: "nav-link text-light" do %>
      		<i class="fas fa-about"></i> About
      		<% end %>
      		<%= link_to '商品一覧', items_path %>
      	  <%= link_to '新規登録', new_customer_registration_path %>
      		<%= link_to 'ログイン', new_admin_session_path %>
      	<% end %>
      </div>
  </div>
      <%= yield %>