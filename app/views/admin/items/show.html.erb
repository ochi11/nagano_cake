<div class="row" style="width: 90%; margin: 20px auto;">
  <div class="col-xs-1" ></div>
  <div class="col-xs-5" style ="margin: 100px 0 100px 0">
    <h2>商品詳細</h2>
    <%= image_tag @item.image, size: "100x100" %>
  </div>
  <div class="col-xs-6" style ="margin: 100px 0 100px 0">

    <table class="table">
	  <tr>
		<th>商品名</th>
		<td><%= @item.name %></td>
	  </tr>

	  <tr>
		<th>商品説明</th>
		<td><%= @item.introduction %></td>
	  </tr>

	  <tr>
	    <th>ジャンル</th>
		<td><%= @item.genre.name %></td>
	  </tr>

	  <tr>
        <th>税込価格 （税抜価格）</th>
		<td><%= @item.add_tax_price.to_s(:delimited) %>   (<%= @item.price %>)  円</td>
	  </tr>

	  <tr>
	    <th>販売ステータス</th>
		<td>
				<% if @item.is_active? %>
					<span class="badge" style="background:#D52438">販売停止</span>
				<% else %>
					<span class="badge" style="background:#8BCE9A">販売中</span>
				<% end %>
		</td>
	  </tr>
	  </table>

	  <%= link_to edit_admin_item_path(@item.id) do%>
		<label class="btn btn-info">編集する</label>
	  <% end %>
  </div>
</div>