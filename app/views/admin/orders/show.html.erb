<div class="row" style="width:60%; margin:0 auto;">
<%= form_with @order, url:admin_orders_path(@order), method: :patch do |f| %>
<h4 style="margin-bottom: 20px; border-left: 2px solid #2D6F4C; padding: 10px;">注文履歴詳細</h4>

	<table class="table table-bordered">
		<tr>
			<th>購入者</th>
			<td><%= link_to  admin_customers_path(@order.id) do %>
					<%= @order.customer.last_name %>
					<%= @order.customer.first_name %>
					<% end %>
			</td>
		</tr>
		<tr>
		  <th>注文日</th>
		  <td><%= @order[:created_at].strftime("%Y/%m/%d") %></td>
		</tr>
		<tr>
			<th>配送先</th>
			<td><%= order_postal_code %>
					<%= order_address %>
					<br>
					<%= @order.last_name %>
					<%= @order.first_name %>
			</td>
		</tr>
		<tr>
			<th>支払方法</th>
			<td><%= payment_method %></td>
		</tr>
		<tr>
			<th>注文ステータス</th>
			<td>
				<%= f.select :is_active,{入金待ち:0, 入金確認:1 ,製作中:2, 発送準備中:3, 発送済み:4} %>
				<%= f.submit "更新", class:"btn btn-primary btn-md" %>
			</td>
		</tr>
	</table>


	<table class="table table-bordered">
		<tr>
			<th>商品名</th>
			<th>単価(税込)</th>
			<th>数量</th>
			<th>小計</th>
			<th>制作ステータス</th>
		</tr>


<%= f.fields_for :order_details do |i| %>
		<tr>
			<td><%= i.object.@item.name %></td>
			<td><%= @item.add_tax_price.to_s(:delimited) %></td>
			<td><%= i.object.amount %></td>
			<td><%= purchase_price(@item.add_tax_price,i.object.amount) %>円</td>
			<td>
				<%= i.select :production_status, Orderdetails.production_statuses.keys.map{ |l| l } %>
					<label>現在ステータス：</label>
						<% case i.object.production_status when "製作待ち" %>
							<span class="badge" style="background: red;"><%= i.object.production_status %></span>
						<% when "製作中" %>
							<span class="badge" style="background: green;"><%= i.object.production_status %></span>
						<% when "製作完了" %>
							<span class="badge" style="background: blue;"><%= i.object.production_status %></span>
						<% end %>
			</td>
		</tr>
<% end %>
	</table>


	<table class="table table-bordered">
		<tr>
			<th style="width:30%;">商品合計</th>
			<td><%= @items.sum(:price).add_tax_price.to_s(:delimited) %>円</td>
		</tr>
		<tr>
			<th style="width:30%;">配送料</th>
			<td><%= @order.postage %>円</td>
		</tr>
		<tr>
			<th style="width:30%;">請求金額合計</th>
			<td><%= @items.sum(:price).add_tax_price.to_s(:delimited) + @order.postage %>円</td>
		</tr>
	</table>
	<hr>
	<div class="text-center">
		<%= f.submit '更新する', class:"btn btn-success" %>
	</div>
<% end %>
</div>