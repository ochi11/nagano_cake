<div class="edit_container" style="width: 50%; margin: 20px auto;">

<%= form_with model: @customer, url:admin_customers_path, method: :patch) do |f| %>
<h4 style="margin-bottom: 20px; border-left: 2px solid #2D6F4C; padding: 10px;"><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h4>
  <label>会員ID</label>
    <%= @customer.id %>
<div class="form-group">
    <label>氏名</label>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
</div>

  <div class="form-group">
    <label>フリガナ</label>
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
  </div>

  <div class="form-group">
    <label>郵便番号</label>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
  </div>

   <div class="form-group">
    <label>住所</label>
    <%= f.text_field :address, autofocus: true, autocomplete: "address", style:"width: 80%;" %>
  </div>

  <div class="form-group">
    <label>電話番号</label>
    <%= f.telephone_field :telephone_number, autofocus: true, autocomplete: "phone" %>
  </div>

  <div class="form-group">
    <label>メールアドレス</label>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">販売ステータス</label>
    <%= f.select :is_active,{販売中:true, 販売停止:false} %>
  </div>

  <div class="actions">
    <label class="col-sm-2 control-label"></label>
    <%= f.submit "変更を保存", class:"btn btn-primary btn-md" %>
  </div>

<% end %>

</div>